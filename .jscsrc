{
  "preset": "airbnb",
  "excludeFiles": ["node_modules/**"],
  "disallowMultipleVarDecl": "exceptUndefined",
  "requireCamelCaseOrUpperCaseIdentifiers": "ignoreProperties",
  "requirePaddingNewLinesAfterBlocks": {
    "allExcept": [
      "inCallExpressions",
      "inArrayExpressions",
      "inProperties"
    ]
  },
  "maximumLineLength": 120
}
